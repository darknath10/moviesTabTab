@model MoviesTabTab.Models.Booking

@{
    ViewBag.Title = "BookingConfirmation";
}

<h2>Your reservation is confirmed!</h2>

<style>
    .jumbotron {
    position: relative;
    background: #000 url("@Model.Screening.Movie.BackdropPath") center center;
    width: 100%;
    height: 100%;
    background-size: cover;
    overflow: hidden;
    text-align:center;
    color: white;
    text-shadow: 2px 2px 4px #000000;
}
</style>

<div class="jumbotron">
    <h2>@Model.Screening.Movie.Title - Movies-Tab/Tab Theaters</h2><br />
    <h3>@Model.Screening.ShowTime.ToShortDateString() - @Model.Screening.ShowTime.ToShortTimeString()</h3>
    <h3>Hall: @Model.Screening.Hall.HallName</h3>
    <h3>@Model.NumberOfTickets seat(s)</h3>    
</div>
<br />
<p style="text-align:center">
    <a class="btn btn-primary" href="@Url.Action("Index", "Home")" role="button">Back to Home page</a>
    <a class="btn btn-success" href="@Url.Action("MyBookings", "Bookings")" role="button">Go to your Bookings</a>
</p>

